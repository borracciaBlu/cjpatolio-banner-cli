{
	"name": "banner-cli",
	"version": "0.14.1",
	"description": "Create a banner comment from package data.",
	"homepage": "https://cjpatoilo.com/banner-cli",
	"repository": "cjpatoilo/banner-cli",
	"license": "MIT",
	"author": "CJ Patoilo <cjpatoilo@gmail.com>",
	"private": false,
	"bin": "cli.js",
	"main": "index.js",
	"files": [
		"cli.js",
		"index.js"
	],
	"keywords": [
		"üê•",
		"author",
		"automation",
		"banner",
		"bundle",
		"bundles",
		"comment",
		"comments",
		"contributing",
		"generate",
		"generator",
		"license",
		"npm",
		"package.json",
		"version",
		"versions"
	],
	"ignore": [
		"artwork.psd",
		".appveyor.yml",
		".editorconfig",
		".github",
		".gitignore",
		".travis.yml"
	],
	"dependencies": {
		"glob": "^7.1.6",
		"prepend-file": "github:borracciaBlu/node-prepend-file#feat/move-bom-character-top-of-file",
		"rasper": "latest"
	},
	"devDependencies": {
		"ava": "^2.4.0",
		"boeing": "latest",
		"husky": "^3.1.0",
		"lint-staged": "^9.5.0",
		"nyc": "^14.1.1",
		"prettier-standard": "^15.0.1",
		"rimraf": "^3.0.0"
	},
	"scripts": {
		"deploy": "npx marshmallow -o docs -i artwork.psd -f -m && npx inject-ga docs/index.html -o docs/index.html -c 'UA-24389952-13' && boeing docs && rimraf docs",
		"lint": "prettier-standard --check",
		"test": "nyc ava"
	},
	"engines": {
		"node": "^12.13.0"
	},
	"prettier": {
		"jsxSingleQuote": false,
		"trailingComma": "all"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": "npm run deploy"
		}
	},
	"lint-staged": {
		"src/**/*": [
			"prettier-standard --format",
			"git add"
		]
	}
}
